<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perfil"
    android:orientation="vertical"
    android:background="#315D69">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/baston" />

            <ImageView
                android:id="@+id/btnCerrarSesion4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/baseline_ic" />


            <ImageView
                android:id="@+id/btnRegresar4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/arrow_back" />

            <TextView
                android:id="@+id/txtUsuario"
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="80dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="italic" />

        </FrameLayout>


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="540dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rectangulo_white_completo" />

        <TextView
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="MI PERFIL"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="50dp"
            android:text="CORREO ELECTRONICO"
            android:textColor="#D3D3D3"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtCorreo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/rectangulo_gray"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:inputType="textEmailAddress"/>

        <ImageView
            android:id="@+id/btnUpdate1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/ic_edit" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="50dp"
            android:text="NOMBRE"
            android:textColor="#D3D3D3"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="180dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/rectangulo_gray"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:inputType="text"/>

        <ImageView
            android:id="@+id/btnUpdate2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/ic_edit" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="240dp"
            android:layout_marginRight="50dp"
            android:text="NUMERO DE TELEFONO"
            android:textColor="#D3D3D3"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtTelefono"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="270dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/rectangulo_gray"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:inputType="number"/>

        <ImageView
            android:id="@+id/btnUpdate3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="270dp"
            android:background="@drawable/ic_edit" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="330dp"
            android:layout_marginRight="50dp"
            android:text="GENERO"
            android:textColor="#D3D3D3"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtGeneroP"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="360dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/rectangulo_gray"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:inputType="text"/>

        <ImageView
            android:id="@+id/btnUpdate4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="360dp"
            android:background="@drawable/ic_edit" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="430dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/btn_login"
            android:text="GUARDAR"
            android:textColor="#D3D3D3"
            android:textSize="20sp"
            android:textStyle="bold" />

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/btnHome4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_home" />

        <ImageView
            android:id="@+id/btnPerfil4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginRight="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_person" />
    </FrameLayout>

</LinearLayout>